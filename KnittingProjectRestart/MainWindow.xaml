<Window x:Class="KnittingProjectRestart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnittingProjectRestart" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Background="Lavender">
            
            <Image Source="/Wool.png" Width="150" />

            <Button x:Name="btnHome" Content="Home" Padding="10" Margin="0,10,0,10" Click="btnHome_Click"></Button>
            <Button x:Name="btnPatterns" Content="Patterns" Padding="10" Margin="0,10,0,10" Click="btnPatterns_Click"></Button>
            <Button x:Name="btnProjects" Content="Projects" Padding="10" Margin="0,10,0,10" Click="btnProjects_Click"></Button>
        </StackPanel>
        <ContentControl x:Name="CControl" Grid.Column="1"/>


    </Grid>
</Window>
