<UserControl x:Class="KnittingProjectRestart.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KnittingProjectRestart"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightBlue">
        <StackPanel>
            <Label Content="Welcome!" FontSize="40" Width="186" />
            <Button x:Name="btnCreateProject" Content="Create New Project" Width="150" Height="75" Margin="10,0,0,10" Click="btnCreateProject_Click"/>
            <Button x:Name="btnOpenProject" Content="Open Project" Width="150" Height="75" Margin="10,0,0,10" Click="btnOpenProject_Click"/>
            <Button x:Name="btnViewPatterns" Content="View Patterns" Width="150" Height="75" Margin="10,0,0,10" Click="btnViewPatterns_Click" />
        </StackPanel>
        <ContentControl x:Name="CControl" Grid.Column="1"/>
    </Grid>
</UserControl>
